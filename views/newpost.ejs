<%- include("partials/header.ejs")  %>

<div class="container mx-auto my-16 p-4 flex flex-col items-center justify-center text-white">
    <h1 class="text-4xl font-bold mb-4">Create a New Post</h1>
    <form action="/submit" method="POST" class="w-full max-w-lg">
        <div class="mb-4">
            <label for="author" class="block text-gray-200 text-sm font-bold mb-2 text-align-left">Author    <span class="font-extrabold text-xl">*</span></label>
            <input type="text" id="author" name="author" placeholder="Author's name" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline ">
        </div>
        <div class="mb-4">
            <label for="title" class="block text-gray-200 text-sm font-bold mb-2">Title    <span class="font-extrabold text-xl">*</span></label>
            <input type="text" id="title" name="title" placeholder="Title of the blog" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline ">
        </div>
        <div class="mb-4">
            <label for="description" class="block text-gray-200 text-sm font-bold mb-2">Description    <span class="font-extrabold text-xl">*</span></label>
            <textarea id="description" autocapitalize="sentences" maxlength="200" placeholder="Brief Description" name="description" required rows="2" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline"></textarea>
        </div>
        <div class="mb-4">
            <label for="content" class="block text-gray-200 text-sm font-bold mb-2">Content    <span class="font-extrabold text-xl">*</span></label>
            <textarea id="content" autocapitalize="sentences" maxlength="4000" placeholder="Content of the blog" name="content" required rows="10" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline"></textarea>
        </div>
        <button type="submit" class="bg-purple-700 hover:bg-purple-900 text-white font-bold py-2 px-4 rounded transition duration-300 ease-in-out hover:cursor-pointer
         ">Submit</button>
    </form>

</div>

<%- include("partials/footer.ejs")  %>